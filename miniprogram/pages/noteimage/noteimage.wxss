/* miniprogram/pages/noteimage/noteimage.wxss */
.line-css {
height:1px;
width: 90%;
 background: rgba(128, 128, 128, 0.842); 
box-shadow: 500rpx;
margin: 30rpx 20rpx;
}
.container1{
    height: 100%;
    width:100%;
    display:flex;
    flex-flow: wrap row;
    background:rgba(128, 128, 128, 0);
    border-radius: 10px;
    margin-top: 30rpx;
}
image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 0%;
  margin: 0 5%;
}
page {
  background: #f6f7f8;
}

.question-form {
  margin: 25rpx;
}

.question-input-area {
  background-color: #fff;
  border: 1rpx solid #f2f2f2;
  border-radius: 4rpx;
}

.question-title-wrap {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
}

.question-title {
  flex: 1;
}

.weui-textarea-counter, .title-input-counter {
  color: #b3b3b3;
  font-size: 14px;
  padding-left: 10rpx;
}

.weui-cell::before, .weui-cells::before, .weui-cell::after, .weui-cells::after {
  border: none;
}

.question-images-area {
  padding: 40rpx 0;
}

.question-images-tool {
  display: flex;
  align-items: center;
}

.question-images {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.q-image-wrap {
  width: 31%;
  margin-right: 10rpx;
}

.q-image {
  /* flex: 1; */
  height: 200rpx;
  width: 100%;
}

.q-image-remover {
  text-align: center;
}
